[Unit]
Description=Potassium Radar Backend API
After=network.target mysql.service
Wants=mysql.service

[Service]
Type=simple
User=rnd2
Group=rnd2
WorkingDirectory=/home/rnd2/Desktop/radar_sys/potassium-backend-
Environment=NODE_ENV=production
Environment=DB_HOST=localhost
Environment=DB_PORT=3306
Environment=DB_NAME=potassium_backend
Environment=DB_USER=root
Environment=DB_PASSWORD=RootPass2025
Environment=JWT_SECRET=your_super_secret_jwt_key_for_potassium_radar_system_2024
