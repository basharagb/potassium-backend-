# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=radar_speed_detection
DB_USER=root
DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3000
NODE_ENV=development

# AI Services Configuration
OPENAI_API_KEY=your_openai_api_key_here

# External Data Services Configuration
# FTP Server for Image Downloads
FTP_HOST=192.186.1.14
FTP_PORT=21
FTP_USER=anonymous
FTP_PASSWORD=anonymous@

# UDP Server for Radar/Fines Data
UDP_HOST=192.186.1.14
UDP_PORT=17081
UDP_LOCAL_PORT=17081

# Auto-start external data service on server startup
AUTO_START_EXTERNAL_DATA=false

# Advanced Plate Recognition Settings
PLATE_RECOGNITION_ENGINE=enhanced
FALLBACK_TO_MOCK=true
TESSERACT_TIMEOUT=30000
CHATGPT_TIMEOUT=30000

# Image Storage Configuration
# Base directory for FTP downloaded images (Linux server confirmed path)
IMAGE_BASE_DIR=/srv/camera_uploads
